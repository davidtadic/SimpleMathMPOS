<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.simplemath">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/myTheme">
        <activity
            android:name=".activities.main.SplashScreenMain"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.RecordsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.PlayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.TrainingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseRomanActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractisePlusMinusActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseArrayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseLessGreaterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseRomanLesson"
            android:screenOrientation="landscape" />

        <service android:name=".services.BackgroundMusicService"
            android:enabled="true"/>

        <activity
            android:name=".activities.main.AboutActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseArrayLessonActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.practise.PractiseLessGreaterLessonActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.play.PlayPlusMinusActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.play.PlayArrayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.play.PlayRomanActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.main.play.PlayLessActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activities.main.play.PlayFinishActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>