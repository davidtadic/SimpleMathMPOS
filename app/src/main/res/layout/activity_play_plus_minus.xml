<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_practise_plus_minus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plus_minus_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.simplemath.activities.main.play.PlayPlusMinusActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/back"
        android:id="@+id/back_plus_minus_play"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/layout_plus_minus_play"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/question_roman"
            android:id="@+id/question_plus_minus1_play"
            android:textSize="55sp"
            android:layout_marginEnd="10dp"
            android:fontFamily="casual"
            android:textColor="#000"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_plus_minus2_play"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="casual"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/question_roman"
            android:id="@+id/question_plus_minus3_play"
            android:layout_marginEnd="10dp"
            android:textSize="55sp"
            android:fontFamily="casual"
            android:textColor="#000"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_plus_minus4_play"
            android:background="@drawable/equal"
            android:layout_marginEnd="10dp"
            android:fontFamily="casual"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/question_roman"
            android:id="@+id/question_plus_minus5_play"
            android:textSize="55sp"
            android:text="@string/nebitno"
            android:fontFamily="casual"
            android:textColor="#000"
            android:textAlignment="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:fontFamily="casual"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="35sp"
            android:id="@+id/score_plus_minus"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="#000"
            android:fontFamily="casual"
            android:id="@+id/answer1_plus_minus_play"
            android:background="@drawable/plus_minus_answerr"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer2_plus_minus_play"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:background="@drawable/plus_minus_answerr"
            android:fontFamily="casual"
            android:textSize="50sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/plus_minus_answerr"
            android:id="@+id/answer3_plus_minus_play"
            android:textSize="50sp"
            android:fontFamily="casual"
            android:textColor="#000"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer4_plus_minus_play"
            android:fontFamily="casual"
            android:background="@drawable/plus_minus_answerr"
            android:textSize="50sp"
            android:textColor="#000"
            android:textAlignment="center"
            />


    </LinearLayout>



</RelativeLayout>
